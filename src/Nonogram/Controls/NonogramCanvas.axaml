<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:NonoGramGen.Controls">
    <Design.PreviewWith>
        <controls:NonogramCanvas />
    </Design.PreviewWith>

    <Style Selector="controls|NonogramCanvas">
        <Setter Property="Template">
            <ControlTemplate>
                <Border BorderBrush="{DynamicResource GridColor}" BorderThickness="3">
                    <Grid x:Name="grid"></Grid>
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>
