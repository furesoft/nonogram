<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:Nonogram.Controls">
    <Design.PreviewWith>
        <controls:Pixel />
    </Design.PreviewWith>

    <Style Selector="controls|Pixel">
        <Setter Property="Background" Value="Black" />
        <Setter Property="Margin" Value="1" />
        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="{TemplateBinding Background}" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}"></Border>
            </ControlTemplate>
        </Setter>
    </Style>

    <Style Selector="controls|Pixel[IsPointerOver=True]">
        <Setter Property="Background" Value="White" />
    </Style>

    <Style Selector="controls|Pixel[IsActivated=True]">
        <Setter Property="Background" Value="White" />
    </Style>
</Styles>
